<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <!--<from-view-id>faces/index.html</from-view-id>-->
        <navigation-case>
            <from-outcome>try</from-outcome>
            <to-view-id>faces/TryJsf.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
     <application>
	  <resource-bundle>
		<base-name>messages</base-name>
		<var>msg</var>
	   </resource-bundle>
     </application>
    <navigation-rule>
        <from-view-id>/Createrepo.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>created</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>notcreated</from-outcome>
            <to-view-id>/failure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>redirectBean</managed-bean-name>
        <managed-bean-class>ua.pp.msk.yum.web.RedirectBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>createrepo</managed-bean-name>
        <managed-bean-class>ua.pp.msk.yum.web.Createrepo</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/Createrepo.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
</faces-config>
